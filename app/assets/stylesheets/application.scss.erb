  width: 70%;
	margin-left: 15%;
}

.jumbotron img {
  background-size: cover;
}

.card-inverse {
  padding: inherit;
  color: #219922;
}

.ck-button {
    margin:4px;
    background-color:#EFEFEF;
    border-radius:4px;
    border:1px solid #D0D0D0;
    overflow:auto;
    float:left;
    width:100px;
    height: 50px;
}

label .ck-button span {
    text-align:center;
    padding:3px 0px;
    display:block;
    font-size: 14px;
}

.ck-button span {
    color:inherit;
    border:1px solid inherit;
    border-radius: 4px;
    height: 48px;
}

.ck-button :checked + span {
    color:black;
    border:1px solid #219922;
    background:#6EC04D;
    border-radius: 4px;
    height: 48px;
}

.ck-button:hover {
    background:#D2EEC8;
    cursor: pointer;
}

.ck-button input {
  position: absolute;
  visibility: hidden;
}

.search-ingredients {
  max-width: 2000px;
  padding: 19px 29px 29px;
  background-color: rgba(255, 255, 255, 0.5);
	border-radius: 5px;
}

/* User sign in and sign out forms. */
.border-form-div {
  max-width: 300px;
  padding: 19px 29px 29px;
  margin: 0 auto 20px;
  background-color: rgba(255, 255, 255, 0.5);
  -webkit-border-radius: 5px;
     -moz-border-radius: 5px;
          border-radius: 5px;
  -webkit-box-shadow: 0 1px 2px rgba(0,0,0,.05);
     -moz-box-shadow: 0 1px 2px rgba(0,0,0,.05);
          box-shadow: 0 1px 2px rgba(0,0,0,.05);
}
.border-form-div .form-signin-heading,
.border-form-div .checkbox {
  margin-bottom: 10px;
}
.border-form-div input[type="text"],
.border-form-div input[type="email"],
.border-form-div input[type="password"] {
  font-size: 16px;
  height: auto;
  margin-bottom: 15px;
  padding: 7px 9px;
}

.border-form-div-edit {
	max-width: 800px;
	padding: 19px 29px 29px;
	margin: 0 auto 20px;
	background-color: rgba(255, 255, 255, 0.5);
