<h1>All Recipes</h1>


<%= @recipes.each do |r| %>
  <div class="panel panel-default">
    <div class="panel-heading"><h3>Recipe By: <%= r.author %></h3></div>
    <div class="panel-body">
    <img class="card-img-top" src='<%= r.image %>'>
    <h1><%= link_to "#{r.title}", recipe_path(r) %></h1>
    <p class="lead"><%= r.directions %></p>
  </div>
</div>
</br>
<% end %>
