<%= form_for @recipe do |f| %>
  <%= f.text_field :title, placeholder: "Name your recipe", required: true %> <br />
  <%#= f.text_field :author, placeholder: "Your Name", required: true %> <br />
  <%= f.text_area :directions, placeholder: "List the steps!", required: true %> <br />
  <h6>Filter ingredients by name:</h6>
  <input type="text" class="live-search-box" placeholder="Type ingredient name" />
  <ul class="live-search-list">
    <% @ingredients.each do |i| %>
    <li>
      <%= check_box_tag "ingredient[ingredient_index][]", i.id%>
      <%= label_tag(i.name) %> <br/>
      <%=  label_tag :quantity %>
      <%=  text_field_tag :quantity %><br>
    </li>
    <% end %>
  </ul>
  <br/>
  <%= f.submit "Submit", :class => 'btn btn-info' %>
<% end %>
